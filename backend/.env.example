# Configuración de la aplicación El Vestuario - PRODUCTION

SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production

# Configuración de Email (Gmail)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-gmail-app-password-16-chars
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Configuración de Base de Datos (PostgreSQL en Render)
# Render proporciona esto automáticamente como DATABASE_URL
DATABASE_URL=postgresql://user:password@host:5432/database

# Admin inicial (solo para primera vez)
ADMIN_INITIAL_PASSWORD=your-secure-admin-password

# Configuración de Envíos
ANDREANI_CREDENTIAL_ID=tu_credential_id
ANDREANI_API_URL=https://api.andreani.com
ANDREANI_CLIENTE=tu_numero_de_cliente
ANDREANI_CONTRATO_DOMICILIO=tu_numero_de_contrato_domicilio
ANDREANI_CONTRATO_SUCURSAL=tu_numero_de_contrato_sucursal
CORREO_ARG_API_KEY=tu_api_key
